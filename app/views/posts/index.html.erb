<h1>Rails Blog Tutorial</h1>

<ul id="blog-list">
  <% @posts.each do |post| %>
  <li>
    <h2 class="post-title"><%= link_to post.title, post %></h2>
    <div class="post-body">
      <%= post.body %>
    </div>
  </li>
  <% end %>
</ul>

<br />

<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
